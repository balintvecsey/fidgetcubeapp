<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Switch
    android:id="@+id/switch_lights"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/seekBar_lights"
    android:layout_marginBottom="50dp"
    android:text="@string/lightson" />
  <SeekBar
    android:id="@+id/seekBar_lights"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:max="255"/>
  <Button
    android:id="@+id/button_lights"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/seekBar_lights"
    android:layout_marginTop="50dp"
    android:text="@string/random_button" />

</RelativeLayout>
